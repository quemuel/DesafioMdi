@using System.Globalization
@model DesafioMdi.Models.Paciente

@{
    ViewBag.Title = "Excluir Paciente";
}

<h3>Excluir Paciente</h3><br />
<hr />

<h4>Tem certeza que deseja deletar o paciente abaixo?</h4>
<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </dt>

                <dd>
                    @DateTime.Parse(Model.DataNascimento.ToShortDateString(), new CultureInfo("pt-BR")).ToShortDateString()
                </dd>
            </dl>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="btn-group">
        @Html.ActionLink("Voltar", "Listar", null, new { @class = "btn btn-default" })
        <input type="submit" value="Excluir" class="btn btn-mdi-default" />
    </div>
}